<!DOCTYPE html>
<html>
  <head>
    <title>kireiminiblogs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" type="text/css" href="http://yui.yahooapis.com/3.18.1/build/cssreset/cssreset-min.css">
    <%= stylesheet_link_tag 'application', media: 'all'%>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
  <div class="background" style="background-image: url(<%= image_path("cleaning.jpg") %>);">
    <header class="header">
      <div class="header_bar">
        <div class="title">
          KIREIMINIBLOG
        </div>
        <% if user_signed_in?%>
          <div class="user_link">
            <%= link_to "マイページ", root_path %>
            <%= link_to "投稿する", new_miniblog_path, class: "post" %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "post" %>
          </div>
        <% else %>
          <div class="header-menu">
            <%= link_to "ログイン", new_user_session_path, class: "post" %>
            <%= link_to "新規登録", new_user_registration_path, class: "post" %>
          </div>
        <% end %>
      </div>
    </header>
    <%= yield %>
  </div>
  </body>
</html>
